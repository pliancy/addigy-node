{
  "name": "addigy",
  "version": "0.0.2",
  "description": "",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --project '.'",
    "test": "npm run lint && jest",
    "docs": "rimraf ./docs && typedoc src/ --out docs --mode modules --module commonjs --target es6 --excludePrivate && touch ./docs/.nojekyll && gh-pages -d docs -t",
    "build": "npm run clean && npm run test && tsc",
    "prepublish": "npm run build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "addigy",
    "addigy api",
    "rest api",
    "rest"
  ],
  "author": "Caleb Albers <calebalbers@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/calebalbers/addigy-node"
  },
  "dependencies": {
    "got": "^8.3.2"
  },
  "devDependencies": {
    "@types/got": "^8.3.5",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.3.3",
    "eslint": "^5.16.0",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.1.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.2"
  }
}
